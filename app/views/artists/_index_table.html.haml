%table.table.align-middle.table-striped
  %thead
    %tr
      %th 名義
      %th ユーザー
      %th bio
      %th 編集

  %tbody
    - artists.each do |artist|
      %tr
        %td= link_to artist.name, artist_path(artist)
        %td
          -if artist.users.present?
            - artist.users.each_with_index do |user, n|
              -if n > 0
                ,
              = link_to user.name, user_path(user)
        %td= artist.bio
        %td= link_to '編集', edit_artist_path(artist), class: 'btn btn-primary btn-sm'
