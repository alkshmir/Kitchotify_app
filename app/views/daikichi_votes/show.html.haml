-provide(:title, "#{@daikichi_form}投票内容")

%h1
  = @daikichi_form.name
  の投票内容
%h3.mb-3
  投票期限：
  = @daikichi_form.accept_until.strftime('%F')

%h3 3点
=render 'musics/music', musics: @three_point_musics
%h3 2点
=render 'musics/music', musics: @two_point_musics
%h3 1点
=render 'musics/music', musics: @one_point_musics

-if !@daikichi_form.form_closed?
  = link_to '編集', edit_daikichi_form_daikichi_vote_path(@daikichi_form, @daikichi_vote), class: 'btn btn-primary'
